<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">
        <TextView
            android:id="@+id/order_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名"
            android:drawableRight="@mipmap/menu_arrow_right"/>
        <TextView
            android:id="@+id/order_status"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:text="订单状态"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/order_image"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/xf"/>
            <TextView
                android:id="@+id/order_price"
                android:layout_toRightOf="@id/order_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:text="￥12"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/order_time"
                android:layout_toRightOf="@id/order_image"
                android:layout_below="@id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05-28 18:23"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/order_image"
                android:layout_below="@id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="由商家提供配送服务"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:background="@color/colorGrey"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:id="@+id/order_confirm"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="确认送达"
                android:textColor="@color/colorTextInPrimaryColor"
                android:background="@drawable/round_corner"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>