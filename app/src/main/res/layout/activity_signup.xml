<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey"
    tools:context="com.xllllh.android.takeaway.SignupActivity">

    <com.xllllh.android.takeaway.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        custom:titleIcon="@mipmap/arrow_left"
        custom:titleText="注册"
        custom:titleTextSize="@dimen/topbar_title_text_size"
        custom:titleBackground="@null"
        custom:menuTextSize="@dimen/topbar_menu_text_size"
        custom:menuBackground="@null"
        custom:textColor="@color/colorTextDefault"
        android:background="@android:color/white"
        android:elevation="2dp">
    </com.xllllh.android.takeaway.TopBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@null"
            android:drawableStart="@mipmap/ic_user"
            android:minHeight="50dp"
            android:hint="输入用户名"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@null"
            android:drawableStart="@mipmap/ic_pass"
            android:minHeight="50dp"
            android:hint="输入密码"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <EditText
            android:id="@+id/password_confirm"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@null"
            android:drawableStart="@mipmap/ic_pass"
            android:minHeight="50dp"
            android:hint="再次输入密码"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认注册"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</LinearLayout>
