<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp"
    android:elevation="1dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@mipmap/xf"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="18sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/shop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="true"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:rating="5"/>
            <TextView
                android:id="@+id/shop_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月售2333单"/>
            <TextView
                android:id="@+id/shop_send_time"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="26分钟"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shop_price_to_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起送价￥10"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/shop_send_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费￥0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:id="@+id/shop_discount"
                    android:drawableStart="@mipmap/tf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满15减5"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>