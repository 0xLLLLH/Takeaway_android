<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    tools:context="com.xllllh.android.takeaway.DishListFragment">

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/dish_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:drawSelectorOnTop="true"
        android:scrollbarStyle="outsideOverlay"
        android:fastScrollEnabled="true"
        android:overScrollMode="never"
        android:divider="@color/colorGrey"
        android:dividerHeight="1px"
        style="StickListView">
    </se.emilsjolander.stickylistheaders.StickyListHeadersListView>
    <LinearLayout
        android:orientation="vertical"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@android:color/white">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDarkGrey"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cart_image"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_cart_inactive"/>
            <TextView
                android:id="@+id/cart_price_sum"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cart_no_dish"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/cart_order_button"
                android:elevation="1dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="去结算"
                android:textColor="@color/colorTextInPrimaryColor"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
