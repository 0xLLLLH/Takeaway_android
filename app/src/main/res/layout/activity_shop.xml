<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xllllh.android.takeaway.ShopActivity">
    <com.xllllh.android.takeaway.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        custom:titleIcon="@mipmap/arrow_left"
        custom:titleText=""
        custom:titleTextSize="@dimen/topbar_title_text_size"
        custom:titleBackground="@null"
        custom:showMenu="false"
        custom:menuTextSize="@dimen/topbar_menu_text_size"
        custom:menuBackground="@null"
        custom:textColor="@color/colorTextDefault"
        android:background="@android:color/white"
        android:elevation="2dp">
    </com.xllllh.android.takeaway.TopBar>
    <LinearLayout
        android:id="@+id/shop_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/image_load"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/xn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载中..."/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/shop_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/r0"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/r2"
                    android:layout_margin="2dp"
                    android:padding="4dp"/>
                <TextView
                    android:id="@+id/shop_name"
                    android:layout_toEndOf="@id/shop_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/shop_notice"
                    android:layout_toEndOf="@id/shop_image"
                    android:layout_below="@id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:padding="6dp"
                    android:text="公告内容"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"/>
            <TextView
                android:id="@+id/shop_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/tf"
                android:text="满减优惠"
                android:textSize="10sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"/>
        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/shopTab"
            style="@style/ShopTabLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:elevation="2dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/shopPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>
