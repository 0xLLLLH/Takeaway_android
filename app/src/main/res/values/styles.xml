<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextInPrimaryColor</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="stickyListHeadersListViewStyle">@style/StickListView</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="ShopTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="StickListView" parent="@android:style/Widget.ListView">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp  </item>
    </style>
    <style name="RatingBar" parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>
</resources>